{
  "name": "template",
  "version": "1.0.0",
  "description": "An API template for E-commerce using Mongoose, Express and Google, Facebook Auth",
  "main": "server.js",
  "scripts": {
    "watch:dev": "webpack",
    "start:dev": "nodemon ./server.js",
    "watch:sass": "node-sass ./src/sass/style.scss ./dist/css/main.css -w",
    "tailwind:css": "postcss ./src/css/tailwind.css -o ./dist/css/tailwind.css",
    "compile:sass": "node-sass ./src/sass/style.scss ./src/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" ./src/css/style.comp.css -o ./src/css/style.prefix.css",
    "compress:css": "node-sass ./src/css/style.prefix.css ./dist/css/main.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css",
    "start:prod": "node ./server.js",
    "debug": "ndb ./server.js",
    "start": "npm-run-all --parallel watch:dev start:dev watch:sass"
  },
  "author": "Yasser Goumghar",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "connect-livereload": "^0.6.1",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.0.0",
    "express-rate-limit": "^5.1.3",
    "express-session": "^1.17.1",
    "helmet": "^3.23.3",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "livereload": "^0.9.1",
    "mongoose": "^5.9.18",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.10",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "pug": ">=3.0.1",
    "slugify": "^1.4.6",
    "validator": "^13.1.1",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.4",
    "concat": "^1.0.3",
    "eslint": "^7.21.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "html-webpack-plugin": "^4.5.1",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "prettier": "2.2.1",
    "sass": "^1.32.7",
    "sass-loader": "^11.0.1",
    "tailwindcss": "^2.0.3",
    "webpack": "^5.12.2",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YasserGmr/Ecommerce-API.git"
  }
}
